# change focus
bindsym $mod+ctrl+h focus left
bindsym $mod+ctrl+j focus down
bindsym $mod+ctrl+k focus up
bindsym $mod+ctrl+l focus right

bindsym $mod+ctrl+1 focus output DP-2
bindsym $mod+ctrl+2 focus output HDMI-1

bindsym $c+bracketleft workspace prev
bindsym $c+bracketright workspace next

